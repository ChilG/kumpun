{
  "$id": "validation",
  "title": "UserValidation",
  "description": "Schema with various validation rules.",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "pattern": "^[a-zA-Z0-9_]+$",
      "description": "A username with alphanumeric characters and underscores."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User's email address."
    },
    "uuid": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier."
    },
    "age": {
      "type": "integer",
      "minimum": 18,
      "maximum": 99,
      "description": "User's age (must be between 18 and 99)."
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Score (0â€“100)."
    }
  },
  "required": ["username", "email", "age"]
}